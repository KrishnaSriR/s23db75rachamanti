extends layout

block content
  h1= title
  p Rows: #{query.rows}
  p Cols: #{query.cols}
  - let rows = Number(query.rows)
  - let cols = Number(query.cols)
  - if (!Number.isInteger(rows) || !Number.isInteger(cols))
      p Invalid input. Please enter valid integers for rows and columns.
  - else if (rows < 1 || rows > 10)
      p Rows must be between 1 and 10.
  - else if (cols < 1 || cols > 10)
      p Columns must be between 1 and 10.
  - else
      table#outer
        - for(let i=0; i<rows; i++)
          tr#middle
            - for(let j=0; j<cols; j++)
              td= calculateCellValue(i, j)
  
    
  