extends layout

block content
    h1= title
    -let results = Educationlist
    .container-fluid
      .row
        each result,index in results
          .col-sm-2(onclick=`buy(${index})`)
            p Subject: #{result.subject}
            p Grade: #{result.grade}
    script.
      function buy(index) {
        alert(`You purchased item ${index}.`);
      }
